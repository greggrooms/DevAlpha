{
    "compilerOptions": {
      "outDir": "dist",
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "es5",
      "declaration": true,
      "lib": ["ES2017", "ES2018"],
      "sourceMap": true,
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true
    },
    "include": [
      "lib/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
}
